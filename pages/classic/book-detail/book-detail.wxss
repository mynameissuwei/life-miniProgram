
.interval {
  width: 100%;
  height: 30rpx;
  background-color: #f5f5f5;
}
.container .sub-container {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color:#F0DAD2;
}
.container .sub-container image {
  width: 200rpx;
  height: 300rpx;
  box-shadow:2px 2px 3px #e3e3e3; 
  border:1px #f5f5f5 solid;
}
.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.author {
  font-size: 28rpx;
  color: red;
  /* margin-bottom: 30rpx; */
}
.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  /* margin-top:30rpx; */
  margin-bottom: 20rpx;
}
.content {
  text-indent: 58rpx; 
  /* font-weight: 300; */
  /* font-family: PingFangSC; */
  color:#000000;
  font-weight: 500;
}
.detail-contaner {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.vertical {
  display: flex;
  flex-direction: column;
}
.description {
  color: #999;
  margin-right: 30rpx;
}
.sub-comment {
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  padding-top:20rpx;
  justify-content:space-between;
  align-content:space-around;
}
.tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15px !important;
  border:1px solid black;
}
.tag-comment {
  padding-left: 30rpx;
}
.sub-container .tag-comment:nth-child(odd) {
  color:white;
}
.short {
  font-size:40rpx;
  color: black;
  padding-bottom: 20rpx;
}
.sub-container .sub-comment v-tag:nth-child(odd) > view {
  background-color:#336699;
  color: white;
}